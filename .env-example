# Telegram bot token from @BotFather (required)
TG_TOKEN=<telegram_token>

# Channel ID for posting headlines (optional if chat provides linkage)
TG_CHANNEL_ID=<telegram_channel_id>

# Discussion group ID for comments (optional; falls back to Telegram linkage)
TG_DISCUSSION_ID=<telegram_discussion_id>

# Exa API key for content enrichment (optional)
EXA_API_KEY=<exa_api_key>

# Redis connection strings (Celery uses DB 0, pending uses DB 1, staging uses DB 2)
CELERY_BROKER_URL=redis://localhost:6379/0
PENDING_REDIS_URL=redis://localhost:6379/1
STAGING_REDIS_URL=redis://localhost:6379/2

# Worker poll interval in seconds (default: 600)
CELERY_POLL_INTERVAL=300
